    "basePath": "/api/v1",
    "tags": ["udacity", "nanodegree", "Advanced", "full-stack"],
    "schemes": ["https", "http"],
    "paths": {
        "/images": {
            "post": {
                "tags": ["image"],
                "summary": "uploads an image",
                "description": "Process your image by upload it using this API",
                "operationId": "uploadFile",
                "consumes": ["multipart/form-data"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "name": "width",
                        "in": "path",
                        "description": "Width of the new processed Image",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    },
                    {
                        "name": "height",
                        "in": "path",
                        "description": "Height of the new processed Image",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    },
                    {
                        "name": "file",
                        "in": "formData",
                        "description": "Image to upload",
                        "required": false,
                        "type": "file"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": { "$ref": "#/definitions/ApiResponse" }
                    }
                }
            }
        }
    },
    "definitions": {
        "ApiResponse": {
            "type": "file"
        }
    },
    "externalDocs": { "description": "Find out more about Swagger", "url": "http://swagger.io" }
}
